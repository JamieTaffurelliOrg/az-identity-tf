{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "outputs": {},
  "parameters": {
    "duration": {
      "defaultValue": "P365D",
      "type": "String"
    },
    "justification": {
      "type": "String"
    },
    "principalId": {
      "type": "String"
    },
    "requestType": {
      "allowedValues": [
        "AdminAssign",
        "AdminExtend",
        "AdminRemove",
        "AdminRenew",
        "AdminUpdate",
        "SelfActivate",
        "SelfDeactivate",
        "SelfExtend",
        "SelfRenew"
      ],
      "type": "String"
    },
    "roleDefinitionId": {
      "type": "String"
    },
    "scope": {
      "type": "String"
    },
    "startDateTime": {
      "defaultValue": "[utcNow()]",
      "type": "String"
    }
  },
  "resources": [
    {
      "apiVersion": "2021-04-01",
      "location": "westeurope",
      "name": "[guid(parameters('scope'), parameters('principalId'), parameters('roleDefinitionId'), parameters('requestType'), 'nested')]",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "resources": [
            {
              "apiVersion": "2022-04-01-preview",
              "name": "[guid(parameters('scope'), parameters('principalId'), parameters('roleDefinitionId'))]",
              "properties": {
                "justification": "[parameters('justification')]",
                "principalId": "[parameters('principalId')]",
                "requestType": "[parameters('requestType')]",
                "roleDefinitionId": "[parameters('roleDefinitionId')]",
                "scheduleInfo": {
                  "expiration": {
                    "duration": "[parameters('duration')]",
                    "type": "AfterDuration"
                  },
                  "startDateTime": "[parameters('startDateTime')]"
                }
              },
              "type": "Microsoft.Authorization/roleEligibilityScheduleRequests"
            }
          ]
        }
      },
      "scope": "[tenantResourceId('Microsoft.Management/managementGroups/', 'jamietaffurelli')]",
      "type": "Microsoft.Resources/deployments"
    }
  ],
  "variables": {}
}
